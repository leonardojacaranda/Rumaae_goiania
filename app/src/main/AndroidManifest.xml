<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.leonardo.rumaae">

    <uses-feature android:name="android.hardware.camera2">
    </uses-feature>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET">
    </uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/facebook_app_id"/>
        <service
            android:name=".LoginActivity"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".User"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".WebTaskBase"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".WebTaskLogin"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".Login"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider android:authorities="com.facebook.app.FacebookContentProvider268358676853907"
            android:name="com.facebook.FacebookContentProvider"
            android:exported="true" />

        <activity android:name="com.facebook.FacebookActivity"
            android:configChanges=
                "keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:label="@string/app_name" />

        <activity
            android:name=".Cadastro"
            android:label="@string/title_activity_cadastro">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.leonardo.rumaae.Cadastro" />
        </activity>
        <activity
            android:name=".Solicitacoes"
            android:label="@string/title_activity_solicitacoes"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Motivo"
            android:label="@string/title_activity_motivo">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.leonardo.rumaae.Motivo" />
        </activity>
        <activity
            android:name=".Camera"
            android:label="ImgCan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            ></activity>
    </application>

</manifest>